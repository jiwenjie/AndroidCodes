<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/text_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stack_app_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/stack_app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            tools:text="CALENDAR" />

        <TextView
            android:id="@+id/stack_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            tools:text="3m ago" />
    </LinearLayout>

    <TextView
        android:id="@+id/stack_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#FF000000"
        android:textStyle="bold"
        tools:text="Fourth of July BBQ Summer Bash" />

    <TextView
        android:id="@+id/stack_notification_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#FF000000"
        tools:text="Invitation From Smeeta Singpuri \nJuly 4, 2018 at 2:00 PM" />

    <TextView
        android:id="@+id/stack_more_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="12sp"
        tools:text="2 more notifications" />
</LinearLayout>
